<?xml version="1.0" ?>

<robot name="talos" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  
  <gazebo reference="link_chassis">
    <material>Gazebo/DarkGrey</material>
  </gazebo>
  <gazebo reference="link_leftwheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="link_rightwheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <legacyMode>false</legacyMode>
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>joint_leftwheel</leftJoint>
      <rightJoint>joint_rightwheel</rightJoint>
      <wheelSeparation>0.2</wheelSeparation>
      <wheelDiameter>0.1</wheelDiameter>
      <torque>0.01</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>link_chassis</robotBaseFrame>
    </plugin>
  </gazebo>


  <link name="link_chassis">
    <!-- pose -->
    <!--  x y   z roll pitch yaw-->
    <pose>0 0 0.1    0     0   0</pose>
    <!-- inertial -->
    <inertial>
      <!--   3 Kgr -->
      <mass value="3"/>
      <!-- same origin as the pose-->
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>
    <!-- body -->
    <collision name="collision_chassis">
      <geometry>
        <box size="0.30 0.20 0.06"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.30 0.20 0.06"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <!-- thirdwheel -->
    <collision name="thirdwheel_collision">
      <origin rpy=" 0 0 0" xyz="0.1 0 -0.03"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <!-- no friction -->
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <visual name="thirdwheel_visual">
      <origin rpy=" 0 0 0" xyz="0.1 0 -0.03"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </visual>
  </link>
  
  <link name="link_rightwheel">
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
    </inertial>
    <collision name="link_rightwheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.05"/>
      </geometry>
    </collision>
    <visual name="link_rightwheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.05"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="joint_rightwheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.05 0.10 0"/>
    <child link="link_rightwheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  
  <link name="link_leftwheel">
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
    </inertial>
    <collision name="link_leftwheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.05"/>
      </geometry>
    </collision>
    <visual name="link_leftwheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.05"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="joint_leftwheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.05 -0.10 0"/>
    <child link="link_leftwheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
</robot>